{
  "name": "revolution-mvp-monorepo",
  "version": "1.0.0",
  "description": "Revolution Realty MVP - Full Stack Application",
  "scripts": {
    "install-frontend": "cd frontend && npm install --legacy-peer-deps",
    "build-frontend": "cd frontend && npm run build",
    "install-backend": "pip install -r requirements.txt",
    "build": "npm run install-frontend && npm run build-frontend",
    "start": "cd backend && gunicorn RevolutionMVP_Django.wsgi --bind 0.0.0.0:$PORT"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": ["real-estate", "django", "react", "full-stack"],
  "author": "Revolution Realty",
  "license": "MIT"
}

