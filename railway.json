{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "chmod +x deploy-unified.sh && ./deploy-unified.sh"
  },
  "deploy": {
    "startCommand": "cd backend && gunicorn RevolutionMVP_Django.wsgi --log-file - --bind 0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NIXPACKS_PKGS": "python311 nodejs-18_x",
        "PYTHON_VERSION": "3.11",
        "NODE_VERSION": "18"
      }
    }
  }
}